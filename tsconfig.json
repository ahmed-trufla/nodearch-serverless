{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/buildinfo",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "**/test/*",
    "**/*spec.ts",
    "./src/admin/*",
    "./admin/*",
    "./dist/*"
  ]
}